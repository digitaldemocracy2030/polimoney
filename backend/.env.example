# Azure SQL Database settings
DATABASE_SERVER=your-server.database.windows.net
DATABASE_NAME=your-database-name
DATABASE_USER=your-username
DATABASE_PASSWORD=your-password
DATABASE_DRIVER={ODBC Driver 18 for SQL Server}

# Or use connection string format
DATABASE_URL=mssql+pyodbc://username:password@server.database.windows.net/database?driver=ODBC+Driver+18+for+SQL+Server

# Security settings
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
PASSWORD_SALT=your_password_salt_here_change_this_in_production

# Application settings
ENV=development
DEBUG=True

# Server settings
HOST=0.0.0.0
PORT=8000

# CORS settings (for production, restrict these)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Optional: Admin user creation
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
